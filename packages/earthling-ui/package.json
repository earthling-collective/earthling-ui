{
  "name": "earthling-ui",
  "version": "1.1.0-alpha.9",
  "homepage": "https://ui.earthling.dev",
  "bugs": "https://github.com/earthling-dev/earthling-ui/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/earthling-dev/earthling-ui.git",
    "directory": "packages/earthling-ui"
  },
  "license": "MIT",
  "author": {
    "name": "Steven Frady",
    "email": "sFrady20@gmail.com",
    "url": "https://stevenfrady.com"
  },
  "type": "module",
  "exports": {
    ".": {
      "style": "./src/index.css"
    },
    "./theme/*": {
      "style": "./src/themes/*.css"
    },
    "./*": {
      "default": "./dist/*/index.js",
      "types": "./src/components/*/index.tsx"
    }
  },
  "style": "./src/index.css",
  "bin": {
    "earthling-ui": "src/cli.ts"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md",
    "tsconfig.json"
  ],
  "scripts": {
    "build": "bun run scripts/build.ts"
  },
  "dependencies": {
    "@iconify/tailwind4": "^1.0.1",
    "@radix-ui/react-slot": "^1.1.1",
    "class-variance-authority": "^0.7.1",
    "commander": "^13.1.0",
    "isomorphic-git": "^1.29.0",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
